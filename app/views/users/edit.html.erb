<h5>プロフィール編集</h5>
<div class="row">
  <%= form_with model:@user, local:true do |f| %>
  <div class="row">
  <label>プロフィール写真</label>
  <%= attachment_image_tag @user, :profile_img, :fill, 100, 100, fallback: "no_image.jpg" %>
  <%= f.attachment_field :profile_img %>
  </div>
  <div class="row">
  <label>ユーザー名</label>
  <%= f.text_field :name %>
  </div>
  <div class="row">
  <label>自己紹介</label>
  <%= f.text_field :introduction %>
  </div>
  <%= f.submit "変更を保存", class:"btn btn-success" %>
  <% end %>
</div>