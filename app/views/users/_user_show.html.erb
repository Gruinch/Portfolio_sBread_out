<div class="row">
  <div class="profile_img">写真</div>
</div>
<div class="row">
  <div class="col">
    <label>ユーザー名</label>
  </div>
  <div class="col">
    <%= @user.name %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <label>自己紹介</label>
  </div>
  <div class="col-9">
    <p><%= @user.introduction %></p>
  </div>
</div>
<% if @user.id == current_user.id %>
<div class="row">
  <div class="col-4">
    <%= link_to "プロフィールを編集する", edit_user_path(current_user.id), class:"btn btn-success" %>
  </div>
  <div class="col-4">
    <%= link_to "新規投稿", new_article_path, class:"btn btn-success" %>
  </div>
  <div class="col-4">
    <%= link_to "気になるリスト", interests_path, class:"btn btn-success" %>
  </div>
</div>
<% end %>
