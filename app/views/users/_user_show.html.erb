<div  class="profile-main-fixed">
<div class="profile-element-fixed">
  <div class="profile_img">
  <%= attachment_image_tag @user, :profile_img, :fill, 100, 100, fallback: "no_image.jpg", class:"rounded-circle"%>
  </div>
</div>
<div class="profile-element-fixed">
    <label class="profile-detail-fixed">ユーザー名</label>
    <div class="profile-detail-fixed"><%= @user.name %></div>
</div>
<div class="profile-element-fixed">
    <label class="profile-detail-fixed">自己紹介</label>
  <div class="profile-detail-fixed"><%= @user.introduction %></div>
</div>
<% if @user.id == current_user.id %>
<div class="profile-element-fixed">
    <div class="profile-detail-fixed"><%= link_to "", edit_user_path(current_user.id), class:"btn btn-outline-secondary fas fa-user-cog" %></div>
    <div class="profile-detail-fixed"><%= link_to "", new_article_path, class:"btn btn-outline-secondary fas fa-bread-slice" %></div>
    <div class="profile-detail-fixed"><%= link_to "", interests_path, class:"btn btn-outline-secondary fas fa-list" %></div>
</div>
</div>
<% end %>
