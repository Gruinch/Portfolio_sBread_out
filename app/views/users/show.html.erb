<div class="contents-header">
  <h1><%= @user.name %>'s Page</h1>
</div>

<div  class="profile-main">
  <p class="notice"><%= notice %></p>
<div class="profile-element">
  <div class="profile_img">
  <%= attachment_image_tag @user, :profile_img, fallback: "Profile_no_image.png", size: "100x100", class:"rounded-circle"%>
  </div>
    <div class="profile-detail"><%= @user.name %></div>
</div>

<div class="profile-element">
    <label class="profile-detail-introduce">自己紹介</label>
  <div class="profile-detail-introduce"><%= @user.introduction %></div>
</div>

<div class="profile-element">
  <%= link_to "Followers", followers_user_path(@user), class:"profile-detail" %>
  <div class="profile-detail"><%= @user.followers.count %>人</div>
  <%= link_to "Followings", following_user_path(@user), class:"profile-detail" %>
  <div class="profile-detail"><%= @user.following.count %>人</div>
</div>

<% if @user == current_user %>
<div class="profile-element">
    <div class="profile-detail"><%= link_to "プロフィール編集", edit_user_path(current_user.id), class:"btn btn-success fas fa-user-cog" %></div>
    <div class="profile-detail"><%= link_to "新規投稿", new_article_path, class:"btn btn-danger fas fa-plus-circle" %></div>
    <div class="profile-detail"><%= link_to "気になる一覧", interests_users_path, class:"btn btn-info fas fa-bars" %></div>
    <div class="profile-detail" class:"btn btn-outline-secondary fas fa-list"></div>
</div>
<% else %>
  <div class="profile-element">
    <%= render "follow_form" %>
  </div>
<% end %>

  <div class="article-index">
    <%= render "articles/articles_card", articles: @articles %>
  </div>

</div>