<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group row m-10">
    <%= f.label :email, class:"col-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-5" %>
  </div>

  <div class="form-group row m-10">
    <%= f.label :name, class:"col-3" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-5" %>
  </div>

  <div class="form-group row m-10">
    <%= f.label :password, class:"col-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class:"col-5" %></br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="form-group row m-10">
    <%= f.label :password_confirmation, class:"col-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-5" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
