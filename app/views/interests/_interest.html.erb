  <% if user_signed_in? %>
    <% if current_user.already_interested?(@article) %>
      <%= link_to article_interest_path(@article, @interest), method: :delete, remote: true do %>
        <i class="fas fa-plus-square" aria-hidden="true" style="color: tomato;">
          <%= @article.interests.count %>
        </i>
    <% end %>
  <% else %>
    <%= link_to article_interests_path(@article), method: :post, remote: true do %>
      <i class="fas fa-plus-square" aria-hidden="true" style="color: darkgray;">
        <%= @article.interests.count %>
      </i>
    <% end %>
  <% end %>
  <% else %>
    <i class="fas fa-plus-square" aria-hidden="true">
      <%= @article.interests.count %>
    </i>
  <% end %>
