<div class="contents-header">
  <h1>検索結果</h1>
</div>
<div class="article-index-main">
  <article class="article-index">
    <% if  @search_articles.present? %>
        <% @search_articles.each do |article| %>
        <div class="card article-card">
          <%= attachment_image_tag article, :post_img, fallback: "article_no_image.png", size:"150x150", class:"card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
        <hr/>
          <p class="card-text"><%= article.body %></p>
        <hr />
          <p class="card-text">posted by<%= link_to article.user.name, user_path(article.user) %></p>
          <i class="fas fa-bread-slice" aria-hidden="true" style="color: chocolate;">
            <%= article.visits.count %>イッタヨ
          </i>
          <i class="fas fa-plus-square" aria-hidden="true" style="color: tomato;">
            <%= article.interests.count %>キニナル
          </i>
          <p class="card-text"><%= l article.created_at, format: :long %></p>
        </div>
        </div>
        <% end %>
    <% else %>
      <h2>検索結果が見つかりません</h2>
    <% end %>
    </article>
      <%= paginate @search_articles %>
</div>